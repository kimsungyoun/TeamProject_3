<body>
<header>

<div class="headLine">   
   <!-- 로그아웃 상태 -->
   <c:if test="${logStatus != 'Y'}">
      <a href="/smhrd/register/login"><input type="button" value="로그인"></a>
      <a href="/smhrd/register/regForm"><input type="button" value="회원가입"></a>
   </c:if>
   
   <!-- 로그인 상태 -->
   <c:if test="${logStatus == 'Y'}">
	   <c:if test="${logType == '0'}"><span>미인증</span></c:if>
	   <c:if test="${logType == '1'}"><span>수강생</span></c:if>
	   <c:if test="${logType == '2'}"><span>수료생</span></c:if>
	   <c:if test="${logType == '3'}"><span>선생님</span></c:if>
	   <c:if test="${logType == '4'}"><span>선생님</span></c:if>
	   <c:if test="${logType == '5'}"><span>관리자</span></c:if>   
	   <span style="color: #66CC99">${logId} 님</span>      
	   <a href="/smhrd/register/logout"><input type="button" value="로그아웃"></a>   
	   <a href="/smhrd/#"><input type="button" value="회원정보수정"></a>
   </c:if> 
</div>

<div id="title">
   <a href="/smhrd" class="title"><img src="/smhrd/img/로고.png" style="height: 200px;"></a>
</div>
<div>

</div>   
